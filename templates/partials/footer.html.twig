<footer class="footer footer-dark">
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="footer-logo">
                    <img src="{{ url('theme://assets/images/logos/' ~ config.themes.fresh.logo|first.name) }}">
                </div>
            </div>
            <div class="column">
             <div class="footer-column">
                <div class="footer-header">
                    <h3>{{theme_config.header.category}}</h3>
                </div>
                 {% for key, value in theme_config.header.links %}
                    <ul class="link-list">
                        <li><a href="{{value}}">{{key}}</a></li>
                    </ul>
                    {% endfor %}
            </div>
        </div>
        <div class="column">
            <div class="footer-column">
                <div class="footer-header">
                    <h3>{{theme_config.header.cat2}}</h3>
                </div>
                    {% for key, value in theme_config.header.links2 %}
                    <ul class="link-list">
                        <li><a href="{{value}}">{{key}}</a></li>
                    </ul>
                    {% endfor %}
           </div>
            </div>
            <div class="column">
                <div class="footer-column">
                    <div class="footer-header">
                        <h3>{{theme_config.header.cat3}}</h3>
                    </div>
                     {% for key, value in theme_config.header.links3 %}
                    <ul class="link-list">
                        <li><a href="{{value}}">{{key}}</a></li>
                    </ul>
                    {% endfor %}
                </div>
            </div>
            <div class="column">
                <div class="footer-column">
                    <div class="footer-header">
                        <h3>Follow Us</h3>
                        <nav class="level is-mobile">
                            <div class="level-left">
                                {% for icon in theme_config.social_icons %}
                                <a class="level-item icon" href="{{ icon.url }}" target="_blank" >
                                     <span class="icon"><i class="fa fa-{{icon.icon}}"></i></span>
                                </a>
                                {% endfor %}
                            </div>
                        </nav>
                        {% if theme_config.reference_bulma %}
                        <a href="https://bulma.io" target="_blank">
                            <img src="{{url('theme://assets/images/logos/made-with-bulma.png')}}" alt="Made with Bulma" width="128" height="24">
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
